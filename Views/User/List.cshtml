@model IEnumerable<Appointment_Scheduler.Models.Appointment>

@{
    ViewData["Title"] = "View";
}

<h1 style="text-align:center">List of Appointments</h1>

<p>
    <a asp-action="Create" asp-route-userId="@ViewBag.userid" class="btn btn-primary btn-sm">Add Appointment</a>
</p>

@if(@Model.Count()==0)
{
    <p style="text-align:center">YOU HAVE NO APPOINTMENTS</p>
    <p>
        <a asp-action="userPage" asp-route-userId="@ViewBag.userId" class="btn btn-primary btn-sm">Back</a>
    </p>

}
else
{
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.userId)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.userId)
            </td>*@
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id})
            </td>
        </tr>
}
    </tbody>
</table>

<p>
   <a asp-action="userPage" asp-route-userId="@Model.ElementAt(0).userId" class="btn btn-primary btn-sm">Back</a>
</p>
}
